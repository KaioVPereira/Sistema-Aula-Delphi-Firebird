   else if RESTResponse1.StatusCode =  429
    then
    begin
      VJSONObject := RESTRequest1.Response.JSONValue AS TJSONObject;
      ShowMessage(VJSONObject.Values['detalhes'].ToString)
    end;

end;

end.




