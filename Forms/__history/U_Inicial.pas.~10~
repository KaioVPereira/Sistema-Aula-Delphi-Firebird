unit U_Inicial;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ComCtrls, Vcl.ToolWin, U_Biblioteca,
  U_login, Vcl.Buttons, Vcl.ExtCtrls;

type
  TFrm_NewInicial = class(TForm)
    Pn_Fundo: TPanel;
    Pn_Topo: TPanel;
    Pn_Menu: TPanel;
    SpeedButton4: TSpeedButton;
    Panel1: TPanel;
    procedure FormCreate(Sender: TObject);
    procedure SpeedButton4MouseEnter(Sender: TObject);
    procedure Pn_FundoClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_NewInicial: TFrm_NewInicial;

implementation

{$R *.dfm}

procedure TFrm_NewInicial.FormCreate(Sender: TObject);
begin
  AbreFormShowModal(TFrm_login, Frm_login);
end;

procedure TFrm_NewInicial.Pn_FundoClick(Sender: TObject);
begin
Panel1.Visible := False;
end;

procedure TFrm_NewInicial.SpeedButton4MouseEnter(Sender: TObject);
begin
  Panel1.Visible := True;
end;

end.
